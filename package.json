{
  "name": "paranoia-character-sheet",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "compile": "bun compile-sass && bun compile-script && bun run ./tool/compile-html.ts",
    "compile-script": "rm -rf ./build/js && tsc && rollup --config tool/rollup.config.js",
    "compile-sass": "sass --no-source-map --style=compressed src/scss:build/css",
    "deploy": "bun run tool/deploy-character-sheet-via-api.ts"
  },
  "devDependencies": {
    "bun-types": "^0.5.0",
    "deepmerge": "^4.3.1",
    "rimraf": "^4.4.1",
    "rollup": "^3.20.2",
    "@open-wc/building-rollup": "^2.2.2"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "sass": "^1.60.0",
    "typescript": "^5.0.3"
  }
}
